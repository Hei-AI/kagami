llm:
  base_url: "https://api.openai.com/v1"
  api_key: "your-openai-api-key-here"
  model: "gpt-4o"

napcat:
  base_url: "ws://localhost:3001"
  access_token: "your-napcat-token"
  reconnection:
    enable: true
    attempts: 10
    delay: 5000
  bot_qq: 123456789
  groups: [123456789, 987654321]

master:
  qq: 123456789  # 主人的QQ号
  nickname: "主人昵称"  # 主人的昵称

behavior:
  energy_max: 100
  energy_cost: 1
  energy_recovery_rate: 3       # 生产环境更慢的恢复速度
  energy_recovery_interval: 60
  message_handler_type: "active"
