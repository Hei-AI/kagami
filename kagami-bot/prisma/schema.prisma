generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = ""
}

model LlmCallLog {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  status    String   @db.VarChar(20)
  input     String   @db.Text
  output    String   @db.Text

  @@map("llm_call_logs")
  @@index([timestamp])
  @@index([status])
}
