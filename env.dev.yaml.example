llm:
  base_url: "https://api.openai.com/v1"
  api_key: "your-openai-api-key-here"
  model: "gpt-4o-mini"

napcat:
  base_url: "ws://localhost:3001"
  access_token: "your-napcat-token"
  reconnection:
    enable: true
    attempts: 10
    delay: 5000
  bot_qq: 123456789
  groups: [123456789, 987654321]

behavior:
  min_reply_interval: 5         # 最小回复间隔（秒）
  energy_max: 100               # 体力值上限
  energy_cost: 1                # 每次回复消耗体力
  energy_recovery_rate: 5       # 体力恢复速度（每60秒恢复多少）
  energy_recovery_interval: 60  # 体力恢复间隔（秒）
  message_handler_type: "active"  # 消息处理策略：active 或 passive
